<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="634.0" prefWidth="988.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.DownloadManager">
    <children>
        <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

            <top>
                <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
                    <children>
                        <Text text="JavaFX Download Manager" fill="#383535">
                            <font>
                                <Font name="Lato Black" size="36.0"/>
                            </font>
                        </Text>

                        <TextField fx:id="urlTextField" promptText="Enter Download URL here">
                            <font>
                                <Font size="17.0"/>
                            </font>
                        </TextField>

                        <Button text="Start Download" onAction="#downloadButtonClicked" textFill="#282727">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="20" left="20" right="20" bottom="20"/>
                    </padding>
                </VBox>
            </top>

            <center>
                <TableView fx:id="tableView" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn text="S.NO" prefWidth="75.0"/>
                        <TableColumn text="File Name" prefWidth="150.0"/>
                        <TableColumn text="File URL" prefWidth="200.0"/>
                        <TableColumn text="Status" prefWidth="100.0"/>
                        <TableColumn text=" % Completed" prefWidth="100.0"/>
                        <TableColumn text="Action" prefWidth="100.0"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
